<script>


  alph = "abcdefghijklmnopqrstuvwxyz1234567890_"
  console.log(alph.slice(5, 10))
  for (let i = 0; i < 29; i++) {
    document.getElementById("letterfr").innerHTML += alph[Math.floor(Math.random() * alph.length)][0]
  }
  document.getElementById("letterfr").innerHTML += "||"
  for (let i = 0; i < 29; i++) {
    document.getElementById("letterfr").innerHTML += alph[Math.floor(Math.random() * alph.length)][0]
  }



  function first() {
   
    split = document.getElementById("letterfr").innerHTML.slice(0, 29)
    console.log(split)
    document.getElementById("letterfr").innerHTML = ""


    for (let i = 0; i < 29; i++) {
      document.getElementById("letterfr").innerHTML += split[Math.floor(Math.random() * split.length)][0]
    }
    document.getElementById("letterfr").innerHTML += "||"
    for (let i = 0; i < 29; i++) {
      document.getElementById("letterfr").innerHTML += split[Math.floor(Math.random() * split.length)][0]
    }



  }
  function second() {
    split = document.getElementById("letterfr").innerHTML.slice(31, 60)
    console.log(split)
    document.getElementById("letterfr").innerHTML = ""


    for (let i = 0; i < 29; i++) {
      document.getElementById("letterfr").innerHTML += split[Math.floor(Math.random() * split.length)][0]
    }
    document.getElementById("letterfr").innerHTML += "||"
    for (let i = 0; i < 29; i++) {
      document.getElementById("letterfr").innerHTML += split[Math.floor(Math.random() * split.length)][0]
    }
  }





  function retry() {

    document.getElementById("letterfr").innerHTML = ""
    for (let i = 0; i < 29; i++) {
      document.getElementById("letterfr").innerHTML += alph[Math.floor(Math.random() * alph.length)][0]
    }
    document.getElementById("letterfr").innerHTML += "||"
    for (let i = 0; i < 29; i++) {
      document.getElementById("letterfr").innerHTML += alph[Math.floor(Math.random() * alph.length)][0]
    }

  }
  function add() {
    balls = document.getElementById("letterfr").innerHTML.slice(0, 29) + document.getElementById("letterfr").innerHTML.slice(31, 60)
    if (balls.split('').every(char => char === balls[0])) {
      document.getElementById("final").innerHTML += document.getElementById("letterfr").innerHTML[0]
    }

  }
</script>
